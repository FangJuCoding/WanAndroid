<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/ripple_select"
    android:clickable="true"
    android:focusable="true">

    <TextView
        android:id="@+id/rankNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="1" />

    <TextView
        android:id="@+id/rankUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_16"
        android:textColor="@color/textPrimary"
        android:textSize="@dimen/dp_16"
        app:layout_constraintStart_toEndOf="@+id/rankNum"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/mine_app_name" />

    <TextView
        android:id="@+id/rankUserId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginBottom="@dimen/dp_16"
        android:textColor="@color/textSecond"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="@+id/rankUsername"
        app:layout_constraintStart_toEndOf="@+id/rankUsername"
        app:layout_constraintTop_toTopOf="@+id/rankUsername"
        tools:text="12345" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginTop="@dimen/dp_8"
        android:layout_marginBottom="@dimen/dp_16"
        android:textColor="@color/textSecond"
        android:textSize="@dimen/dp_12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/rankNum"
        app:layout_constraintTop_toBottomOf="@+id/rankUsername"
        tools:text="12345" />

    <ImageView
        android:layout_width="@dimen/dp_14"
        android:layout_height="@dimen/dp_14"
        android:layout_marginEnd="@dimen/dp_8"
        android:src="@drawable/mine_integral"
        app:layout_constraintBottom_toBottomOf="@+id/rankUserIntegral"
        app:layout_constraintEnd_toStartOf="@+id/rankUserIntegral"
        app:layout_constraintTop_toTopOf="@+id/rankUserIntegral" />

    <TextView
        android:id="@+id/rankUserIntegral"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/dp_16"
        android:includeFontPadding="false"
        android:textSize="@dimen/dp_14"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="100" />

    <View
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_1"
        android:background="@color/backgroundSecond"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>